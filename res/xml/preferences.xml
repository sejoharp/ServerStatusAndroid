<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" android:key="XBMCRemotePrefsFile">
	<EditTextPreference
		android:key="ip"
		android:title="IP Address / Host"
		android:defaultValue="10.1.1.143" 
		android:summary="Connect to address %value%" />
		<EditTextPreference
		android:key="mac"
		android:title="MAC Address"
		android:defaultValue="00-1c-c0-b4-f8-79" 
		android:summary="MAC address '%value%' for wake up" />
		<EditTextPreference
		android:key="port"
		android:title="Port"
		android:defaultValue="8080" 
		android:summary="service port: '%value%'" />
		<EditTextPreference
		android:key="retries"
		android:title="Retries"
		android:defaultValue="10" 
		android:summary="number of retries: '%value%'" />
</PreferenceScreen>